<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".presentation.ui.MainActivity">

    <EditText
        android:id="@+id/etInputPostCode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_text_bakground"
        android:drawableLeft="@drawable/ic_location_searching"
        android:drawablePadding="10dp"
        android:hint="CEP"
        android:elevation="10dp"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/yellow"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSearchPostCode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:elevation="10dp"
        android:background="@drawable/button_background"
        android:text="Consultar CEP"
        app:layout_constraintEnd_toEndOf="@id/etInputPostCode"
        app:layout_constraintStart_toStartOf="@id/etInputPostCode"
        app:layout_constraintTop_toBottomOf="@id/etInputPostCode" />

</androidx.constraintlayout.widget.ConstraintLayout>